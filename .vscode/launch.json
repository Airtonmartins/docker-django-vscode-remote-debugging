    "version": "0.2.0",
    "configurations": [
        {
            // requires vscode extension: ms-python.python
            "name": "runserver",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/code"
